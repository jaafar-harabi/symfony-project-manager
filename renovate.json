{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "rangeStrategy": "bump",
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchManagers": ["composer"],
      "groupName": "php dependencies"
    },
    {
      "matchManagers": ["npm"],
      "groupName": "node dependencies"
    }
  ]
}
