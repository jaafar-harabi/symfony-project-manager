{% extends 'base.html.twig' %}
{% block title %}Tasks{% endblock %}
{% block body %}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Tasks</h1>
    <a href="{{ path('app_task_new') }}" class="btn btn-primary">New task</a>
</div>

<table class="table table-striped">
    <thead>
    <tr>
        <th>#</th>
        <th>Title</th>
        <th>Project</th>
        <th>Status</th>
        <th>Due date</th>
        <th>Assignee</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for task in tasks %}
        <tr>
            <td>{{ task.id }}</td>
            <td><a href="{{ path('app_task_show', {id: task.id}) }}">{{ task.title }}</a></td>
            <td>{{ task.project.name }}</td>
            <td>{{ task.status }}</td>
            <td>{{ task.dueDate ? task.dueDate|date('Y-m-d') : '-' }}</td>
            <td>{{ task.assignee ? task.assignee.fullName : '-' }}</td>
            <td>
                <a href="{{ path('app_task_edit', {id: task.id}) }}" class="btn btn-sm btn-secondary">Edit</a>
                {{ include('task/_delete_form.html.twig') }}
            </td>
        </tr>
    {% else %}
        <tr><td colspan="7" class="text-center">No tasks found.</td></tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
