{% extends 'base.html.twig' %}
{% block title %}Projects{% endblock %}
{% block body %}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Projects</h1>
    <a href="{{ path('app_project_new') }}" class="btn btn-primary">New project</a>
</div>

<table class="table table-striped">
    <thead>
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Created at</th>
        <th>Owner</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for project in projects %}
        <tr>
            <td>{{ project.id }}</td>
            <td><a href="{{ path('app_project_show', {id: project.id}) }}">{{ project.name }}</a></td>
            <td>{{ project.createdAt|date('Y-m-d') }}</td>
            <td>{{ project.owner.fullName }}</td>
            <td>
                <a href="{{ path('app_project_edit', {id: project.id}) }}" class="btn btn-sm btn-secondary">Edit</a>
                {{ include('project/_delete_form.html.twig') }}
            </td>
        </tr>
    {% else %}
        <tr><td colspan="5" class="text-center">No projects yet.</td></tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
